<% @user ||= current_user %>

<div class="flex flex-row gap-4 justify-center items-center">
    <div class="flex flex-row gap-2">
        <%= link_to "Following", following_user_path(@user), :class => "text-sm" %>
        <span class="bg-indigo-100 text-indigo-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded-full dark:bg-indigo-900 dark:text-indigo-300 self-center">
            <%= @user.following.count %>
        </span>
    </div>
    <div class="flex flex-row gap-2">
        <%= link_to "Followers", followers_user_path(@user), :class => "text-sm" %>
        <span class="bg-indigo-100 text-indigo-800 text-xs font-medium mr-2 px-2.5 py-0.5 rounded-full dark:bg-indigo-900 dark:text-indigo-300 self-center">
            <%= @user.followers.count %>
        </span>
    </div>
</div>
