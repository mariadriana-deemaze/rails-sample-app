<% provide(:title, 'Sign up') %>

<h1>Sign up</h1>

<div class="flex flex-col w-[400px] border border-gray-200 bg-gray-50 p-5 rounded-md m-auto">
    <%= form_with(model: @user, local:true, class: "flex flex-col gap-4", data: { turbo: false } ) do |f| %>

      <%= render 'shared/error_messages', errors: @user.errors.full_messages %>
   
      <div class="relative z-0 w-full mb-6 group">
        <%= f.label :name, class: "form-label" %>
        <%= f.text_field :name, class: "form-input peer" %>
      </div>

      <div class="relative z-0 w-full mb-6 group">
        <%= f.label :email, class: "form-label" %>
        <%= f.text_field :email, class: "form-input peer" %>
      </div>

      <div class="relative z-0 w-full mb-6 group">
        <%= f.label :password, class: "form-label" %>
        <%= f.text_field :password, type:"password", class: "form-input peer" %>
      </div>

      <div class="relative z-0 w-full mb-6 group">
        <%= f.label :password_confirmation, "Confirmation", class: "form-label" %>
        <%= f.text_field :password_confirmation, type:"password", class: "form-input peer" %>
      </div>
 
      <%= f.submit "Create account", class:"primary-button" %>

      <label class="text-sm font-medium">Already have an account? <%= link_to "Login now!", login_path, :class => "underline underline-offset-1 text-blue-600" %></label>
      
    <% end %>
</div>

