<% provide(:title, 'Login') %>

<h1>Login</h1>

<div class="flex flex-col w-[400px] border border-gray-200 bg-gray-50 p-5 rounded-md m-auto">
    <%= form_with(url: login_path, scope: :session, local: true, class: "flex flex-col gap-4", data: { turbo: false } ) do |f| %>

      <%= render 'shared/error_messages', object: f.object %>
   
      <div class="relative z-0 w-full mb-6 group">
          <%= f.text_field :email, class: "form-input peer" %>
          <%= f.label :email, class: "form-label" %>
      </div>

      <div class="relative z-0 w-full mb-6 group">
          <%= f.text_field :password, type:"password", class: "form-input peer" %>
          <%= f.label :password, class: "form-label" %>
      </div>

      <%= f.label :remember_me, class: "flex items-start mb-6" do %>
          <div class="flex items-center h-5">
            <%= f.check_box :remember_me, id: "remember-checkbox", class: "form-checkbox" %>
          </div>
          <label for="remember-checkbox" class="ml-2 text-sm font-medium text-gray-900 dark:text-gray-300">Remember me on this computer</label>
      <% end %>
        
      <%= f.submit "Login to account", class:"primary-button" %>

      <label class="text-sm font-medium">New user? <%= link_to "Sign up now!", signup_path, :class => "underline underline-offset-1 text-blue-600" %></label>

      <label class="text-sm font-medium bg-gray-200 rounded-sm p-4">
        <%= link_to "Forgot password?", new_password_reset_path, :class => "underline underline-offset-1 text-blue-600" %>
      </label>
      
    <% end %>
</div>

