<% provide(:title, 'Login') %>

<h1>Login</h1>

<div class="flex flex-col w-[400px] border border-gray-200 bg-gray-50 p-5 rounded-md m-auto">
    <%= form_with(url: login_path, scope: :session, local: true, class: "flex flex-col gap-4", data: { turbo: false } ) do |f| %>

      <%#= render 'shared/error_messages', errors: @user.errors.full_messages %>
   
      <%= f.label :email, class: "form-label" %>
      <%= f.text_field :email, class: "form-input" %>

      <%= f.label :password, class: "form-label" %>
      <%= f.text_field :password, type:"password", class: "form-input" %>
        
      <%= f.submit "Login to account", class:"primary-button" %>

      <p>New user? <%= link_to "Sign up now!", signup_path, :class => "underline underline-offset-1 text-blue-600" %></p>
      
    <% end %>
</div>

